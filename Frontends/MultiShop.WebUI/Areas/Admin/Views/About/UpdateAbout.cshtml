@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="chart-box">
            <h4>Hakkımda Alanı Güncelleme Sayfası</h4>
            <br />
            <div class="bs-example" data-example-id="bordered-table">

                <form method="post">
                    <input type="hidden" class="form-control" asp-for="AboutId" />
                    <label>Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description" />
                    <br />
                    <label>Adres</label>
                    <input type="text" class="form-control" asp-for="Address" />
                    <br />
                    <div class="form-group">
                        <label for="exampleInputEmail2">Email</label>
                        <input type="email" class="form-control" asp-for="Email" id="exampleInputEmail2" placeholder="Mail Adresinizi Giriniz.">
                        <br />
                    </div>
                    <label>Telefon</label>
                    <input type="text" class="form-control" asp-for="Phone" />
                    <br />
                    <button class="btn btn-primary">Hakkımda Alanını Güncelle</button>
                </form>

            </div>
        </div>
    </div>
    </div>
</section>

