@{
    ViewData["Title"] = "Index";
}

<script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

<script type="text/javascript">
    $(document).ready(() => {
        var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7138/signalrhub").build();
        // Bağlantı durumu gösterimi için HTML elementinin doğru konumda olması gerek
        $("#connstatus").text(connection.state);

        connection.start().then(() => {
            $("#connstatus").text(connection.state);
            connection.invoke("SendStatisticCount");
        }).catch((err) => {
            console.log(err);
        });

        connection.on("ReceiveCommentCount", (value) => {
            $("#commentCount").text(value);
        });
        // İsteğe bağlı olarak, bağlantı durumu değiştiğinde güncelleme ekleyebilirsiniz.
        // connection.onclose(() => {
        //     $("#connstatus").text("Disconnected");
        // });
    });
</script>


<div class="container">
    <br />
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-8 offset-2">
                    <div class="alert alert-primary">Bağlantı Durumu : <strong id="connstatus"></strong></div>
                    <div class="alert alert-primary">Yorum Sayısı : <strong id="commentCount"></strong></div>
                </div>
            </div>
        </div>
    </div>
</div>


