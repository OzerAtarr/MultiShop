@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="chart-box">
            <h4>Ürün Ekleme Sayfası</h4>
            <br />
            <div class="bs-example" data-example-id="bordered-table">

                <form method="post">
                    <label>Kategori Adı</label>
                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.CategoryValues, new { @class = "form-control" })
                    <br />
                    <label>Ürün Adı</label>
                    <input type="text" class="form-control" asp-for="ProductName" />
                    <br />
                    <label>Fiyat</label>
                    <input type="text" class="form-control" asp-for="ProductPrice" />
                    <br />
                    <label>Stok</label>
                    <input type="number" class="form-control" asp-for="ProcutStock" />
                    <br />
                    <label>Foroğraf Url</label>
                    <input type="text" class="form-control" asp-for="ProcutImageUrl" />
                    <br />
                    <label>Açıklama</label>
                    <textarea rows ="5" class="form-control" asp-for="ProcutDescription"></textarea>
                    <br />
                    <button class="btn btn-primary">Ürünü Ekle</button>
                </form>

            </div>
        </div>
    </div>
    </div>
</section>

